{
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitAny": true,
    "outDir": "./dist",
    "sourceMap": true,
    "target": "es6",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@shared/*": ["../shared/*"]
    },
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
